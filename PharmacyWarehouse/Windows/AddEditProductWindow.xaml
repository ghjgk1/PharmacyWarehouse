<Window x:Class="PharmacyWarehouse.Windows.AddEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacyWarehouse.Windows"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="650" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}" 
                Padding="20,16">
            <TextBlock Text="{Binding Title}" 
                      Style="{StaticResource H1}" 
                      Foreground="{StaticResource TextWhiteBrush}"/>
        </Border>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <StackPanel>
                <!-- Название -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Название товара*" 
                              Style="{StaticResource H3}"
                              Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Product.Name, UpdateSourceTrigger=PropertyChanged}"
                            MaxLength="200"
                            Height="40"/>
                </StackPanel>

                <!-- Категория -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Категория" 
                              Style="{StaticResource H3}"
                              Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Categories}"
                              DisplayMemberPath="Name"
                            SelectedItem="{Binding SelectedCategory}"
                            Height="40">
                    </ComboBox>
                </StackPanel>

                <!-- Форма выпуска -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Форма выпуска*" 
                               Style="{StaticResource H3}"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding ReleaseForms}"
                              SelectedItem="{Binding Product.ReleaseForm}"
                              IsEditable="True"
                              Height="40"/>
                </StackPanel>

                <!-- Производитель -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Производитель*" 
                               Style="{StaticResource H3}"
                               Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Product.Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="100"
                             Height="40"/>
                </StackPanel>

                <!-- Единица измерения -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Единица измерения*" 
                               Style="{StaticResource H3}"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Units}"
                              SelectedItem="{Binding Product.UnitOfMeasure}"
                              IsEditable="True"
                             Height="40"/>
                </StackPanel>

                <!-- Минимальный остаток -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Минимальный остаток*" 
                              Style="{StaticResource H3}"
                              Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Product.MinRemainder}"
                            Height="40"/>
                    <TextBlock Text="Количество при котором будет предупреждение" 
                              Style="{StaticResource Caption}"
                              Foreground="{StaticResource GrayBrush}"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Рецептурный -->
                <CheckBox Content="Требует рецепта" 
                         IsChecked="{Binding Product.RequiresPrescription}"
                         Margin="0,0,0,16"
                         FontSize="14"
                         Foreground="{StaticResource TextDarkBrush}"/>

                <!-- Описание -->
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="Описание" 
                              Style="{StaticResource H3}"
                              Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Product.Description}" 
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            Height="100"
                            VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
               Background="{StaticResource GrayLightestBrush}" 
               BorderBrush="{StaticResource BorderLightBrush}"
               BorderThickness="0,1,0,0"
               Padding="20,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" 
                       Click="Save_Click"
                       Style="{StaticResource PrimaryButton}" 
                       Width="120"
                       Height="40"
                       Margin="12,0,0,0"/>
                <Button Content="Отмена" 
                       Click="Cancel_Click"
                       Style="{StaticResource OutlineButton}" 
                       Width="120"
                       Height="40"/>
                
            </StackPanel>
        </Border>
    </Grid>
</Window>
