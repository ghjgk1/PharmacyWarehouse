<Window x:Class="PharmacyWarehouse.Windows.ArchiveProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacyWarehouse.Windows"
        mc:Ignorable="d"
        Title="ArchiveProductWindow" SizeToContent="Height"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="CriticalReasonStyle" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="DarkRed"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Конвертер для видимости -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <StackPanel Margin="16">
        <!-- Заголовок -->
        <TextBlock Text="Архивация товара" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <!-- Информация о товаре -->
        <Border Background="#F8F9FA" 
                BorderBrush="#E9ECEF" 
                BorderThickness="1" 
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="{Binding ProductName}" 
                           FontWeight="SemiBold"
                           FontSize="14"/>
                <TextBlock Text="{Binding CurrentStock, StringFormat='Остаток на складе: {0} шт.'}"
                           Margin="0,4,0,0"
                           Foreground="#666"/>
            </StackPanel>
        </Border>

        <!-- Причина -->
        <TextBlock Text="Причина архивации:" 
                   Margin="0,0,0,4"
                   FontWeight="SemiBold"/>
        <ComboBox x:Name="cmbReason" 
                  SelectionChanged="CmbReason_SelectionChanged"
                  SelectedIndex="0"
                  Height="32">
            <!-- НЕ критические причины -->
            <ComboBoxItem Content="Снят с производства" Tag="NonCritical"/>
            <ComboBoxItem Content="Изменение ассортимента аптеки" Tag="NonCritical"/>
            <ComboBoxItem Content="Устаревшая форма выпуска" Tag="NonCritical"/>
            <ComboBoxItem Content="Замена на аналог" Tag="NonCritical"/>

            <!-- Критические причины -->
            <ComboBoxItem Content="Отзыв Росздравнадзора" Tag="Critical" Style="{StaticResource CriticalReasonStyle}"/>
            <ComboBoxItem Content="Запрет на реализацию" Tag="Critical" Style="{StaticResource CriticalReasonStyle}"/>
            <ComboBoxItem Content="Просроченный товар" Tag="Critical" Style="{StaticResource CriticalReasonStyle}"/>
            <ComboBoxItem Content="Брак/Повреждение" Tag="Critical" Style="{StaticResource CriticalReasonStyle}"/>
            <ComboBoxItem Content="Нарушение условий хранения" Tag="Critical" Style="{StaticResource CriticalReasonStyle}"/>

            <ComboBoxItem Content="Другая причина" Tag="Other"/>
        </ComboBox>

        <!-- Описание причины -->
        <TextBlock x:Name="txtReasonDescription"
                   FontStyle="Italic"
                   Foreground="Gray"
                   Margin="0,4,0,12"
                   TextWrapping="Wrap"
                   FontSize="12"/>

        <!-- Действия (только если есть остатки) -->
        <StackPanel x:Name="actionPanel" 
                    Margin="0,0,0,12"
                    Visibility="{Binding HasStock, Converter={StaticResource BoolToVisibilityConverter}}">

            <TextBlock Text="Действие с остатками:" 
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,0,0,8"/>

            <!-- Вариант 1: Дораспродать -->
            <Border Background="#F8F9FA" 
                    BorderBrush="#E9ECEF" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,8">
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="rbSellOut" 
                               GroupName="Action" 
                               IsChecked="True"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Дораспродать остатки" 
                                   FontWeight="SemiBold"
                                   FontSize="13"/>
                        <TextBlock Text="Товар нельзя заказывать, но можно продавать остатки"
                                   FontSize="11" 
                                   Foreground="#666"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Вариант 2: Списать -->
            <Border Style="{StaticResource WarningBox}"
                    BorderThickness="1" 
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,8">
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="rbWriteOff" 
                               GroupName="Action"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Списать остатки" 
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   Foreground="#E65100"/>
                        <TextBlock Text="Товар будет заблокирован для продажи"
                                   FontSize="11" 
                                   Foreground="#666"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Предупреждение для критических причин -->
            <Border x:Name="criticalWarning" 
                    Background="#FFEBEE" 
                    BorderBrush="#EF9A9A" 
                    BorderThickness="1" 
                    Padding="12" 
                    Margin="0,8,0,0"
                    CornerRadius="4"
                    Visibility="Collapsed">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="⚠" 
                                   FontSize="16"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Эта причина требует обязательного списания!" 
                                   FontWeight="Bold" 
                                   Foreground="#D32F2F"/>
                    </StackPanel>
                    <TextBlock Text="Остатки будут списаны, продажа заблокирована."
                               FontSize="11"
                               Foreground="#666"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Комментарий -->
        <TextBlock Text="Комментарий (необязательно):" 
                   Margin="0,0,0,4"
                   FontWeight="SemiBold"/>
        <TextBox x:Name="txtComment" 
                 Height="60" 
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 BorderBrush="#CED4DA"
                 BorderThickness="1"
                 Padding="8"
                 FontSize="13"/>

        <!-- Разделитель -->
        <Separator Margin="0,16,0,16"/>


        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Архивировать" 
                    Click="OkButton_Click"
                    Style="{StaticResource PrimaryButton}"
                    Width="140" 
                    Height="40"
                    IsDefault="True"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click"
                    Style="{StaticResource OutlineButton}"
                    Width="80"
                    Margin="0,0,8,0" Height="40"/>
            
        </StackPanel>
    </StackPanel>
</Window>