<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryDark">#1a2b3c</Color>
    <Color x:Key="Primary">#2c3e50</Color>
    <Color x:Key="PrimaryLight">#3a506b</Color>

    <Color x:Key="SecondaryDark">#2980b9</Color>
    <Color x:Key="Secondary">#3498db</Color>
    <Color x:Key="SecondaryLight">#5dade2</Color>

    <Color x:Key="AccentGreen">#27ae60</Color>
    <Color x:Key="AccentGreenLight">#2ecc71</Color>
    <Color x:Key="AccentOrange">#f39c12</Color>
    <Color x:Key="AccentOrangeLight">#f1c40f</Color>
    <Color x:Key="AccentRed">#e74c3c</Color>
    <Color x:Key="AccentRedLight">#c0392b</Color>
    <Color x:Key="AccentPurple">#9b59b6</Color>
    <Color x:Key="AccentYellow">#f1c40f</Color>

    <Color x:Key="GrayDark">#2c3e50</Color>
    <Color x:Key="Gray">#7f8c8d</Color>
    <Color x:Key="GrayLight">#95a5a6</Color>
    <Color x:Key="GrayLighter">#bdc3c7</Color>
    <Color x:Key="GrayLightest">#ecf0f1</Color>

    <Color x:Key="BackgroundDark">#f8f9fa</Color>
    <Color x:Key="Background">#ffffff</Color>
    <Color x:Key="BackgroundLight">#fdfdfd</Color>

    <Color x:Key="StatusSuccess">#27ae60</Color>
    <Color x:Key="StatusWarning">#f39c12</Color>
    <Color x:Key="StatusError">#e74c3c</Color>
    <Color x:Key="StatusInfo">#3498db</Color>
    <Color x:Key="StatusDisabled">#bdc3c7</Color>

    <Color x:Key="ProductNormal">#ffffff</Color>
    <Color x:Key="ProductExpired">#ffebee</Color>
    <Color x:Key="ProductExpiring">#fff3e0</Color>
    <Color x:Key="ProductLowStock">#e3f2fd</Color>
    <Color x:Key="ProductOutOfStock">#f5f5f5</Color>

    <Color x:Key="TextDark">#2c3e50</Color>
    <Color x:Key="Text">#34495e</Color>
    <Color x:Key="TextLight">#7f8c8d</Color>
    <Color x:Key="TextWhite">#ffffff</Color>

    <Color x:Key="BorderDark">#bdc3c7</Color>
    <Color x:Key="Border">#d5dbdb</Color>
    <Color x:Key="BorderLight">#e5e8e8</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDark}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLight}"/>

    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
    <SolidColorBrush x:Key="AccentGreenLightBrush" Color="{StaticResource AccentGreenLight}"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}"/>
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentPurple}"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>

    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
    <SolidColorBrush x:Key="GrayLightBrush" Color="{StaticResource GrayLight}"/>
    <SolidColorBrush x:Key="GrayLighterBrush" Color="{StaticResource GrayLighter}"/>
    <SolidColorBrush x:Key="GrayLightestBrush" Color="{StaticResource GrayLightest}"/>

    <SolidColorBrush x:Key="StatusSuccessBrush" Color="{StaticResource StatusSuccess}"/>
    <SolidColorBrush x:Key="StatusWarningBrush" Color="{StaticResource StatusWarning}"/>
    <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource StatusError}"/>
    <SolidColorBrush x:Key="StatusInfoBrush" Color="{StaticResource StatusInfo}"/>

    <SolidColorBrush x:Key="ProductExpiredBrush" Color="{StaticResource ProductExpired}"/>
    <SolidColorBrush x:Key="ProductExpiringBrush" Color="{StaticResource ProductExpiring}"/>
    <SolidColorBrush x:Key="ProductLowStockBrush" Color="{StaticResource ProductLowStock}"/>

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource Text}"/>
    <SolidColorBrush x:Key="TextDarkBrush" Color="{StaticResource TextDark}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLight}"/>
    <SolidColorBrush x:Key="TextWhiteBrush" Color="{StaticResource TextWhite}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="{StaticResource BorderDark}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLight}"/>

</ResourceDictionary>