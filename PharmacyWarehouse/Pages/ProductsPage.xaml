<Page x:Class="PharmacyWarehouse.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      Title="Товары аптеки">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- ЗАГОЛОВОК И КНОПКИ -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="📦 Товары и препараты" Style="{StaticResource H1}"/>
                    <TextBlock Text="Управление товарами аптеки"
                              Style="{StaticResource BodyText}" 
                              Margin="0,4,0,16"/>

                    <StackPanel Style="{StaticResource ToolbarPanel}">
                        <Button Content="➕ Добавить товар" 
                                Style="{StaticResource PrimaryButton}" 
                                Width="140" 
                                Height="42"
                                Click="AddProduct_Click"
                                ToolTip="Добавить новый товар в справочник"/>

                        <Button Content="✏️ Редактировать" 
                                Style="{StaticResource SecondaryButton}" 
                                Width="140"
                                Height="42" 
                                Margin="8,0,0,0" 
                                Click="EditProduct_Click"
                                ToolTip="Редактировать выбранный товар"/>

                        <Button x:Name="btnArchive" 
                                Content="📦 В архив" 
                                Width="100" 
                                Height="42"
                                Margin="8,0,0,0" 
                                Click="ArchiveProduct_Click"
                                ToolTip="Перевести товар в архив (неактивное состояние)">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource WarningButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                            <Setter Value="Collapsed" Property="Visibility"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Value="Visible" Property="Visibility"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="btnActivate" 
                                Content="✅ Активировать" 
                                Visibility="Collapsed"
                                Width="140" 
                                Margin="8,0,0,0" 
                                Click="ActivateProduct_Click"
                                ToolTip="Вернуть товар из архива">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource SuccessButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Value="Collapsed" Property="Visibility"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                            <Setter Value="Visible" Property="Visibility"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="btnDelete" 
                                Content="🗑️ Удалить" 
                                Style="{StaticResource DangerButton}" 
                                Width="100" 
                                Height="42"
                                Margin="8,0,0,0" 
                                Click="DeleteProduct_Click"
                                ToolTip="Удалить товар (доступно только если нет связанных партий)"/>


                        <Separator Margin="24,0"/>

                        <Button Content="🔄 Обновить" 
                                Style="{StaticResource IconButton}" 
                                Click="RefreshProducts_Click"
                                ToolTip="Обновить список товаров"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ФИЛЬТРЫ И ПОИСК -->
            <Border Style="{StaticResource FilterPanel}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🔍 Фильтры и поиск" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Поиск по названию/производителю -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,8">
                                <TextBlock Text="Поиск (название, производитель, описание)" 
                                          Style="{StaticResource BodyText}" 
                                          Margin="0,0,0,4"/>
                                <TextBox x:Name="SearchTextBox"
                                         TextChanged="SearchTextBox_TextChanged"
                                         KeyDown="SearchTextBox_KeyDown">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                            </StackPanel>

                            <!-- Категория -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,12,8">
                                <TextBlock Text="Категория" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbCategory" 
                                          SelectionChanged="CmbCategory_SelectionChanged">
                                </ComboBox>
                            </StackPanel>

                            <!-- Рецептурный -->
                            <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,12,8">
                                <TextBlock Text="Рецептурный" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbPrescription" SelectionChanged="CmbPrescription_SelectionChanged">
                                    <ComboBoxItem Content="Все" IsSelected="True"/>
                                    <ComboBoxItem Content="Только рецептурные"/>
                                    <ComboBoxItem Content="Без рецепта"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Наличие -->
                            <StackPanel Grid.Column="3" Grid.Row="0" Margin="0,0,12,8">
                                <TextBlock Text="Наличие" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbAvailability" SelectionChanged="CmbAvailability_SelectionChanged">
                                    <ComboBoxItem Content="Все" IsSelected="True"/>
                                    <ComboBoxItem Content="В наличии"/>
                                    <ComboBoxItem Content="Нет в наличии"/>
                                    <ComboBoxItem Content="Низкий остаток"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Кнопки фильтров -->
                            <StackPanel Grid.Column="4" Grid.Row="0" VerticalAlignment="Bottom">
                                <Button Content="Применить" 
                                        Style="{StaticResource PrimaryButton}" 
                                        Width="100" 
                                        Click="ApplyFilters_Click"
                                        ToolTip="Применить фильтры"/>
                                <Button Content="Сбросить" 
                                        Style="{StaticResource OutlineButton}" 
                                        Width="100" 
                                        Margin="0,8,0,0" 
                                        Click="ResetFilters_Click"
                                        ToolTip="Сбросить все фильтры"/>
                            </StackPanel>

                            <!-- Дополнительные фильтры -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Orientation="Horizontal">
                                <CheckBox x:Name="chkShowArchived" 
                                          Content="Показывать архивные" 
                                          Margin="0,0,16,0"
                                          Checked="ChkShowArchived_Checked"
                                          Unchecked="ChkShowArchived_Unchecked"/>

                                <CheckBox x:Name="chkExpiringSoon" 
                                          Content="Только с истекающим сроком" 
                                          Margin="0,0,16,0"
                                          Checked="ChkExpiringSoon_Checked"
                                          Unchecked="ChkExpiringSoon_Unchecked"/>

                                <CheckBox x:Name="chkExpired" 
                                          Margin="0,0,16,0"
                                          Content="Только просроченные" 
                                          Checked="ChkExpired_Checked"
                                          Unchecked="ChkExpired_Unchecked"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Статистика фильтров -->
                    <Border Grid.Column="1" 
                           Margin="24,0,0,0"
                           Padding="16"
                           Background="{StaticResource BackgroundLightBrush}"
                           BorderBrush="{StaticResource BorderLightBrush}"
                           BorderThickness="1"
                           CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="📊 Статистика" Style="{StaticResource H3}" Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtTotalCount" 
                                       Text="Всего: 0" 
                                       Style="{StaticResource BodyText}"
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtFilteredCount" 
                                       Text="Найдено: 0" 
                                       Style="{StaticResource BodyText}"/>
                            <TextBlock x:Name="txtInStockCount" 
                                       Text="В наличии: 0" 
                                       Style="{StaticResource BodyText}"
                                       Foreground="{StaticResource AccentGreenBrush}"/>
                            <TextBlock x:Name="txtLowStockCount" 
                                       Text="Низкий остаток: 0" 
                                       Style="{StaticResource BodyText}"
                                       Foreground="{StaticResource AccentOrangeBrush}"/>
                            <TextBlock x:Name="txtOutOfStockCount" 
                                       Text="Нет в наличии: 0" 
                                       Style="{StaticResource BodyText}"
                                       Foreground="{StaticResource AccentRedBrush}"/>
                            <Separator Margin="0,8,0,8"/>
                            <TextBlock x:Name="txtExpiringCount" 
                                       Text="Истекает срок: 0" 
                                       Style="{StaticResource BodyText}"
                                       Foreground="{StaticResource AccentOrangeBrush}"/>
                            <TextBlock x:Name="txtExpiredCount" 
                                       Text="Просрочено: 0" 
                                       Style="{StaticResource BodyText}"
                                       Foreground="{StaticResource AccentRedBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ТАБЛИЦА ТОВАРОВ -->
            <Border Style="{StaticResource Card}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок таблицы -->
                    <Border Grid.Row="0" Style="{StaticResource CardHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="📋 Список товаров" 
                                       Style="{StaticResource H3}" 
                                       Foreground="{StaticResource TextWhiteBrush}"/>
                        </Grid>
                    </Border>

                    <DataGrid x:Name="dgProducts" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"  
                              MouseDoubleClick="DgProducts_MouseDoubleClick"
                              SelectionChanged="DgProducts_SelectionChanged"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single">

                        <DataGrid.Columns>
                            <!-- Название -->
                            <DataGridTextColumn Header="Наименование товара" 
                                                Width="250"
                                                Binding="{Binding Name}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Name}"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Margin" Value="10 0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Категория -->
                            <DataGridTextColumn Header="Категория" 
                                                Width="120"
                                                Binding="{Binding Category.Name, FallbackValue='Без категории'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Форма выпуска -->
                            <DataGridTextColumn Header="Форма выпуска" 
                                                Width="120"
                                                Binding="{Binding ReleaseForm, FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Производитель -->
                            <DataGridTextColumn Header="Производитель" 
                                                Width="150"
                                                Binding="{Binding Manufacturer, FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Manufacturer}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Единица измерения -->
                            <DataGridTextColumn Header="Ед. изм." 
                                                Width="70"
                                                Binding="{Binding UnitOfMeasure, FallbackValue='шт'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Остаток -->
                            <DataGridTextColumn Header="Остаток" 
                                Width="90"
                                Binding="{Binding CurrentStock, StringFormat='{}{0:N0}'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="0,0,8,0"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <!-- Нет в наличии -->
                                            <DataTrigger Binding="{Binding CurrentStock}" Value="0">
                                                <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <!-- Низкий остаток (меньше минимального и больше 0) -->
                                            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <!-- Нормальный остаток -->
                                            <DataTrigger Binding="{Binding CurrentStock}" Value="{x:Static sys:Int32.MaxValue}">
                                                <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Срок годности" 
                                Width="120"
                                Binding="{Binding NearestExpirationDate, StringFormat='dd.MM.yyyy', FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Style.Triggers>
                                            <!-- Просроченные -->
                                            <DataTrigger Binding="{Binding HasExpiredBatches}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <!-- Истекают скоро (менее 30 дней) -->
                                            <DataTrigger Binding="{Binding HasExpiringBatches}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <!-- Рецептурный -->
                            <DataGridTemplateColumn Header="Рецепт" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="9"
                                                Padding="6,2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RequiresPrescription}" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource StatusSuccessBrush}" />
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding RequiresPrescription}" Value="False">
                                                            <Setter Property="Background" Value="{StaticResource StatusErrorBrush}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding PrescriptionText}"
                                                       Foreground="White"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Описание -->
                            <DataGridTextColumn Header="Описание" 
                    Width="200"
                    Binding="{Binding Description, FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip">
                                            <Setter.Value>
                                                <TextBlock Text="{Binding Description}" 
                              TextWrapping="Wrap" 
                              MaxWidth="300"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Статус -->
                            <DataGridTemplateColumn Header="Активный" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="9"
                                                Padding="6,2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource StatusSuccessBrush}" />
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Background" Value="{StaticResource StatusErrorBrush}" />
                                                            <Setter Property="ToolTip" Value="{Binding ArchiveReason}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                                
                                            <TextBlock Text="{Binding StatusText}"
                                                       Foreground="White"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Height" Value="40"/>
                                <Style.Triggers>
                                    <!-- Выделение просроченных товаров -->
                                    <DataTrigger Binding="{Binding HasExpiredBatches}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                                        <Setter Property="ToolTip">
                                            <Setter.Value>
                                                <TextBlock Text="⚠ Внимание! Имеются просроченные партии" 
                                                          FontWeight="Bold"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <!-- Выделение товаров с истекающим сроком -->
                                    <DataTrigger Binding="{Binding HasExpiringBatches}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ProductExpiringBrush}"/>
                                        <Setter Property="ToolTip">
                                            <Setter.Value>
                                                <TextBlock Text="⏰ Внимание! Имеются партии с истекающим сроком годности" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <!-- Выделение товаров с низким остатком -->
                                    <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ProductLowStockBrush}"/>
                                        <Setter Property="ToolTip">
                                            <Setter.Value>
                                                <TextBlock Text="📉 Остаток ниже минимального уровня" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <!-- Выделение отсутствующих товаров -->
                                    <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                        <Setter Property="ToolTip">
                                            <Setter.Value>
                                                <TextBlock Text="❌ Товар отсутствует на складе" 
                                                          FontWeight="Bold"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Редактировать" 
                                          Click="EditProduct_Click"
                                          Icon="✏️"/>
                                <MenuItem Header="Просмотреть партии" 
                                          Click="ViewBatches_Click"
                                          Icon="📊"/>
                                <Separator/>
                                <MenuItem Header="Создать приход" 
                                          Click="CreateArrival_Click"
                                          Icon="📥"/>
                                <MenuItem Header="Создать списание" 
                                          Click="CreateWriteOff_Click"
                                          Icon="🗑️"/>
                                <Separator/>
                                <MenuItem Header="Копировать название" 
                                          Click="CopyName_Click"
                                          Icon="📋"/>
                                <MenuItem Header="Скопировать код" 
                                          Click="CopyId_Click"
                                          Icon="#"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                    <!-- ПАГИНАЦИЯ И ИНФОРМАЦИЯ -->
                    <Border Grid.Row="2" 
                           Background="{StaticResource BackgroundLightBrush}"
                           BorderBrush="{StaticResource BorderLightBrush}"
                           BorderThickness="0,1,0,0"
                           Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Выбор размера страницы -->
                            <StackPanel Grid.Column="1" 
                                       Orientation="Horizontal" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,16,0">
                                <TextBlock Text="Показывать по:" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,8,0"/>
                                <ComboBox x:Name="cmbPageSize" 
                                          Width="80"
                                          SelectionChanged="CmbPageSize_SelectionChanged">
                                    <ComboBoxItem Content="10" Tag="10"/>
                                    <ComboBoxItem Content="25" Tag="25" IsSelected="True"/>
                                    <ComboBoxItem Content="50" Tag="50"/>
                                    <ComboBoxItem Content="100" Tag="100"/>
                                    <ComboBoxItem Content="Все" Tag="0"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Пагинация -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="⏮️" 
                                        Style="{StaticResource IconButton}" 
                                        ToolTip="В начало"
                                        Click="FirstPage_Click"/>
                                <Button Content="◀️" 
                                        Style="{StaticResource IconButton}" 
                                        ToolTip="Предыдущая страница"
                                        Click="PrevPage_Click"
                                        Margin="4,0,0,0"/>

                                <TextBlock Text="Страница " 
                                          VerticalAlignment="Center" 
                                          Margin="8,0,4,0"/>
                                <TextBox x:Name="txtCurrentPage" 
                                         Text="1" 
                                         Width="40" 
                                         TextAlignment="Center" 
                                         VerticalAlignment="Center"
                                         TextChanged="TxtCurrentPage_TextChanged"/>
                                <TextBlock Text=" из " 
                                          VerticalAlignment="Center" 
                                          Margin="4,0,4,0"/>
                                <TextBlock x:Name="txtTotalPages" 
                                           Text="1" 
                                           VerticalAlignment="Center"
                                           FontWeight="SemiBold"/>

                                <Button Content="▶️" 
                                        Style="{StaticResource IconButton}" 
                                        ToolTip="Следующая страница"
                                        Click="NextPage_Click"
                                        Margin="8,0,4,0"/>
                                <Button Content="⏭️" 
                                        Style="{StaticResource IconButton}" 
                                        ToolTip="В конец"
                                        Click="LastPage_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>