<Page x:Class="PharmacyWarehouse.Pages.StockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      mc:Ignorable="d" 
      Title="Остатки товаров">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ФИЛЬТРЫ И СВОДКА -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Остатки товаров на складе" Style="{StaticResource H1}"/>

                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Фильтры -->
                        <StackPanel Grid.Column="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Категория -->
                                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock Text="Категория" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                    <ComboBox x:Name="cmbCategory" DisplayMemberPath="Name">
                                        <ComboBoxItem Content="Все категории" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Поставщик -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Поставщик" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                    <ComboBox x:Name="cmbSupplier" DisplayMemberPath="Name">
                                        <ComboBoxItem Content="Все поставщики" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Кнопки -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                                    <Button Content="Обновить" Style="{StaticResource PrimaryButton}" Width="100"/>
                                    <Button Content="Экспорт" Style="{StaticResource OutlineButton}" Width="100" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Сводка -->
                        <Border Grid.Column="1" 
                           Margin="24,0,0,0"
                           Padding="16"
                           Background="{StaticResource BackgroundLightBrush}"
                           BorderBrush="{StaticResource BorderBrush}"
                           BorderThickness="1"
                           CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="Сводка остатков" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <TextBlock x:Name="txtTotalValue" Text="0.00" 
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource AccentGreenBrush}"/>
                                <TextBlock Text="руб." Style="{StaticResource Caption}"/>

                                <Separator Margin="0,8,0,8"/>

                                <TextBlock Text="Товаров:" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <TextBlock x:Name="txtProductCount" Text="0" FontWeight="SemiBold"/>
                                <TextBlock Text="Позиций:" Style="{StaticResource BodyText}" Margin="0,4,0,4"/>
                                <TextBlock x:Name="txtItemCount" Text="0" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ТАБЛИЦА ОСТАТКОВ И КАРТОЧКИ -->
            <Grid Grid.Row="1" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <!-- Таблица остатков -->
                <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,8,0" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок -->
                        <Border Grid.Row="0" Style="{StaticResource CardHeader}">
                            <TextBlock Text="Детальные остатки" 
                                  Style="{StaticResource H3}" 
                                  Foreground="{StaticResource TextWhiteBrush}"/>
                        </Border>

                        <!-- Таблица -->
                        <DataGrid x:Name="dgStock" 
                             Grid.Row="1"
                             AutoGenerateColumns="False">

                            <DataGrid.Columns>
                                <!-- Товар -->
                                <DataGridTextColumn Header="Товар" 
                                               Width="200"
                                               Binding="{Binding ProductName}"/>

                                <!-- Категория -->
                                <DataGridTextColumn Header="Категория" 
                                               Width="120"
                                               Binding="{Binding Category}"/>

                                <!-- Общий остаток -->
                                <DataGridTextColumn Header="Остаток" 
                                               Width="100"
                                               Binding="{Binding TotalQuantity}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Минимальный остаток -->
                                <DataGridTextColumn Header="Мин." 
                                               Width="80"
                                               Binding="{Binding MinStock}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Статус -->
                                <DataGridTemplateColumn Header="Статус" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="12" 
                                               Padding="6,2"
                                               HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource AccentGreenBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource AccentOrangeBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding HasExpired}" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding StatusText}"
                                                      Foreground="White"
                                                      FontWeight="SemiBold"
                                                      FontSize="11"
                                                      HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Цена -->
                                <DataGridTextColumn Header="Цена, руб." 
                                               Width="120"
                                               Binding="{Binding Price, StringFormat='N2'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Стоимость остатка -->
                                <DataGridTextColumn Header="Стоимость" 
                                               Width="120"
                                               Binding="{Binding StockValue, StringFormat='N2'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Карточка товара -->
                <Border Grid.Column="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Карточка товара" Style="{StaticResource H2}" Margin="0,0,0,16"/>

                        <Border Style="{StaticResource InfoBox}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock x:Name="txtSelectedProduct" Text="Товар не выбран" 
                                      FontWeight="SemiBold"
                                      FontSize="16"
                                      Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Категория:" Grid.Row="0" Grid.Column="0" Style="{StaticResource BodyText}"/>
                                    <TextBlock x:Name="txtProductCategory" Text="-" Grid.Row="0" Grid.Column="1" Style="{StaticResource BodyText}"/>

                                    <TextBlock Text="Остаток:" Grid.Row="1" Grid.Column="0" Style="{StaticResource BodyText}"/>
                                    <TextBlock x:Name="txtProductStock" Text="0" Grid.Row="1" Grid.Column="1" 
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource PrimaryBrush}"/>

                                    <TextBlock Text="Мин. остаток:" Grid.Row="2" Grid.Column="0" Style="{StaticResource BodyText}"/>
                                    <TextBlock x:Name="txtProductMinStock" Text="0" Grid.Row="2" Grid.Column="1" Style="{StaticResource BodyText}"/>

                                    <TextBlock Text="Цена:" Grid.Row="3" Grid.Column="0" Style="{StaticResource BodyText}"/>
                                    <TextBlock x:Name="txtProductPrice" Text="0.00 руб." Grid.Row="3" Grid.Column="1" 
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource AccentGreenBrush}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Партии товара -->
                        <TextBlock Text="Партии товара" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                        <DataGrid x:Name="dgProductBatches" 
                             Height="200"
                             AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Партия" 
                                               Width="100" 
                                               Binding="{Binding BatchNumber}"/>
                                <DataGridTextColumn Header="Срок годности" 
                                               Width="100" 
                                               Binding="{Binding ExpirationDate, StringFormat='dd.MM.yyyy'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsExpiring}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Количество" 
                                               Width="80" 
                                               Binding="{Binding Quantity}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Поставщик" 
                                               Width="120" 
                                               Binding="{Binding Supplier}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Быстрые действия -->
                        <StackPanel Margin="0,16,0,0">
                            <TextBlock Text="Быстрые действия" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                            <WrapPanel>
                                <Button Content="Приход" Style="{StaticResource SuccessButton}" Width="80"/>
                                <Button Content="Списание" Style="{StaticResource DangerButton}" Width="100" Margin="8,0,0,0"/>
                                <Button Content="Перемещение" Style="{StaticResource PrimaryButton}" Width="120" Margin="8,0,0,0"/>
                            </WrapPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </ScrollViewer>
</Page>