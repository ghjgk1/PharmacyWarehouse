<Page x:Class="PharmacyWarehouse.Pages.WriteOffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Списание товара">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- ЗАГОЛОВОК И ИНФОРМАЦИЯ О ДОКУМЕНТЕ -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="🗑️ Акт списания" Style="{StaticResource H1}"/>
                    <TextBlock Text="Оформление списания товара со склада"
                              Style="{StaticResource BodyText}" 
                              Margin="0,4,0,16"/>

                    <!-- Панель инструментов -->
                    <StackPanel Style="{StaticResource ToolbarPanel}">
                        <Button Content="📄 Сохранить черновик" 
                                Style="{StaticResource OutlineButton}" 
                                Width="160"
                                Height="42"
                                Click="SaveDraft_Click"/>

                        <Button Content="✅ Провести списание" 
                                Style="{StaticResource DangerButton}" 
                                Width="180"
                                Height="42"
                                Margin="8,0,0,0"
                                Click="ProcessWriteOff_Click"/>

                        <Button Content="🖨️ Печать" 
                                Style="{StaticResource SecondaryButton}" 
                                Width="100"
                                Height="42"
                                Margin="8,0,0,0"
                                Click="PrintDocument_Click"/>

                        <Button Content="↩️ Отмена" 
                                Width="100"
                                Height="42"
                                Margin="8,0,0,0"
                                Click="CancelDocument_Click"/>
                        <Separator Margin="24,0"/>

                        <Button Content="📋 Копировать номер" 
                                Style="{StaticResource IconButton}"
                                Click="CopyNumber_Click"/>

                        <Button Content="📊 Статистика" 
                                Style="{StaticResource IconButton}"
                                Click="ShowStatistics_Click"/>
                    </StackPanel>

                    <!-- Основная информация о документе -->
                    <Border Style="{StaticResource FilterPanel}" Margin="0,16,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Левая колонка: номер и дата -->
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Номер документа -->
                                    <TextBlock Text="Номер акта:" 
                                              Grid.Row="0" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"/>
                                    <TextBox x:Name="txtDocNumber" 
                                            Grid.Row="0" Grid.Column="1"
                                            Text="Новый"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryBrush}"
                                            IsReadOnly="True"
                                            BorderThickness="0"
                                            Background="Transparent"/>

                                    <!-- Дата документа -->
                                    <TextBlock Text="Дата списания:*" 
                                              Grid.Row="1" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"
                                              Margin="0,12,0,0"/>
                                    <DatePicker x:Name="dpWriteOffDate" 
                                               Grid.Row="1" Grid.Column="1"
                                               Margin="0,12,0,0"/>

                                    <!-- Причина списания -->
                                    <TextBlock Text="Причина списания:" 
                                              Grid.Row="2" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"
                                              Margin="0,12,0,0"/>
                                    <ComboBox x:Name="cmbReason" 
                                             Grid.Row="2" Grid.Column="1"
                                             Height="36"
                                             Margin="0,12,0,0"/>
                                </Grid>
                            </StackPanel>

                            <!-- Правая колонка: ответственный и примечание -->
                            <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Ответственный -->
                                    <TextBlock Text="Ответственный:" 
                                              Grid.Row="0" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"/>
                                    <TextBox x:Name="txtResponsiblePerson" 
                                            Grid.Row="0" Grid.Column="1"
                                            Height="36"/>

                                    <!-- Примечание -->
                                    <TextBlock Text="Примечание:" 
                                              Grid.Row="1" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"
                                              Margin="0,12,0,0"/>
                                    <TextBox x:Name="txtNotes" 
                                            Grid.Row="1" Grid.Column="1"
                                            Margin="0,12,0,0"
                                            Height="36"/>

                                    <!-- Комиссия -->
                                    <TextBlock Text="Состав комиссии:" 
                                              Grid.Row="2" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"
                                              Margin="0,12,0,0"/>
                                    <TextBox x:Name="txtCommission" 
                                            Grid.Row="2" Grid.Column="1"
                                            Margin="0,12,0,0"
                                            Height="36"/>
                                </Grid>
                            </StackPanel>

                            <!-- Правая колонка: статус и сумма -->
                            <Border Grid.Column="2" 
                                   Style="{StaticResource InfoBox}"
                                   Width="200">
                                <StackPanel>
                                    <TextBlock Text="Позиций:" 
                                              Style="{StaticResource BodyText}"/>
                                    <TextBlock x:Name="txtItemsCount" 
                                              Text="0"
                                              Style="{StaticResource BodyText}"
                                              FontWeight="SemiBold"/>

                                    <TextBlock Text="Общее количество:" 
                                              Style="{StaticResource BodyText}"
                                              Margin="0,8,0,0"/>
                                    <TextBlock x:Name="txtTotalQuantity" 
                                              Text="0"
                                              Style="{StaticResource BodyText}"
                                              FontWeight="SemiBold"/>

                                    <TextBlock Text="Общая сумма:" 
                                              Style="{StaticResource BodyText}"
                                              Margin="0,8,0,0"/>
                                    <TextBlock x:Name="txtTotalAmount" 
                                              Text="0.00"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource AccentRedBrush}"/>
                                    <TextBlock Text="руб." 
                                              Style="{StaticResource Caption}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- ТАБЛИЦА ПОЗИЦИЙ И ПАНЕЛЬ ДОБАВЛЕНИЯ -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Таблица позиций списания -->
                <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0 0 15 0" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок таблицы -->
                        <Border Grid.Row="0" Style="{StaticResource CardHeader}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="📦 Позиции списания" 
                                           Style="{StaticResource H3}" 
                                           Foreground="{StaticResource TextWhiteBrush}"/>
                                <TextBlock Grid.Column="1" 
                                           x:Name="txtSelectedItemsInfo"
                                           Text="Выбрано: 0" 
                                           Style="{StaticResource BodyText}" 
                                           Foreground="{StaticResource TextWhiteBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Таблица позиций -->
                        <DataGrid x:Name="dgItems" 
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  SelectionChanged="DgItems_SelectionChanged">

                            <DataGrid.Columns>
                                <!-- № -->
                                <DataGridTextColumn Header="№" Width="40">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Товар -->
                                <DataGridTextColumn Header="Товар" 
                                                  Width="200"
                                                  Binding="{Binding Product.Name}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding Product.Name}"/>
                                            <Setter Property="Margin" Value="10 0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Серия партии -->
                                <DataGridTextColumn Header="Серия партии" 
                                                  Width="100"
                                                  Binding="{Binding Series}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Количество -->
                                <DataGridTextColumn Header="Кол-во" 
                                                  Width="80"
                                                  Binding="{Binding Quantity, StringFormat='{}{0:N0}'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextAlignment" Value="Right"/>
                                            <Setter Property="Margin" Value="0,0,8,0"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Цена списания -->
                                <DataGridTextColumn Header="Цена" 
                                                  Width="90"
                                                  Binding="{Binding UnitPrice, StringFormat='N2'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextAlignment" Value="Right"/>
                                            <Setter Property="Margin" Value="0,0,8,0"/>
                                            <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Сумма списания -->
                                <DataGridTextColumn Header="Сумма" 
                                                  Width="100"
                                                  Binding="{Binding TotalPrice, StringFormat='N2'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextAlignment" Value="Right"/>
                                            <Setter Property="Margin" Value="0,0,8,0"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Срок годности -->
                                <DataGridTextColumn Header="Срок годности" 
                                                  Width="110"
                                                  Binding="{Binding ExpirationDate, StringFormat='dd.MM.yyyy'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Действия -->
                                <DataGridTemplateColumn Header="" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="🗑️" 
                                                    Style="{StaticResource IconButton}"
                                                    Tag="{Binding}"
                                                    Click="DeleteItem_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="✏️ Редактировать" 
                                              Click="EditItem_Click"/>
                                    <Separator/>
                                    <MenuItem Header="📊 Информация о товаре" 
                                              Click="ShowProductInfo_Click"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- ПАНЕЛЬ ДОБАВЛЕНИЯ ТОВАРА -->
                <Border Grid.Column="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="➕ Добавить позицию" 
                                   Style="{StaticResource H3}" 
                                   Margin="0,0,0,16"/>

                        <!-- Поля для добавления товара -->
                        <StackPanel>
                            <!-- Товар -->
                            <TextBlock Text="Товар:" 
                                       Style="{StaticResource BodyText}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4"/>
                            <ComboBox x:Name="cmbProduct" 
                                     DisplayMemberPath="Name"
                                     IsEditable="True"
                                     IsTextSearchEnabled="True"
                                     StaysOpenOnEdit="True"
                                     TextSearch.TextPath="Name"
                                     Height="36"
                                     Margin="0,0,0,12"
                                     SelectionChanged="CmbProduct_SelectionChanged"/>

                            <!-- Информация о товаре -->
                            <Border Style="{StaticResource InfoBox}" Margin="0,0,0,12">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Производитель:" 
                                                   Style="{StaticResource BodyText}" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" 
                                                   x:Name="txtProductManufacturer" 
                                                   Text="-"
                                                   Style="{StaticResource BodyText}"
                                                   Margin="8,0,0,0"/>
                                    </Grid>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Текущий остаток:" 
                                                   Style="{StaticResource BodyText}" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" 
                                                   x:Name="txtCurrentStock" 
                                                   Text="0"
                                                   Style="{StaticResource BodyText}"
                                                   Margin="8,0,0,0"/>
                                    </Grid>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Цена товара:" 
                                                   Style="{StaticResource BodyText}" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" 
                                                   x:Name="txtCurrentPrice" 
                                                   Text="0.00"
                                                   Style="{StaticResource BodyText}"
                                                   Margin="8,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Выбор партии -->
                            <TextBlock Text="Партия для списания:" 
                                       Style="{StaticResource BodyText}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4"/>
                            <ComboBox x:Name="cmbBatchSeries"
                                     Height="36"
                                     Margin="0,0,0,12"
                                     SelectionChanged="CmbBatchSeries_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Series}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Quantity, StringFormat='Остаток: {0:N0} шт.'}" 
                                                       Style="{StaticResource Caption}"/>
                                            <TextBlock Text="{Binding ExpirationDate, StringFormat='Срок: {0:dd.MM.yyyy}'}" 
                                                       Style="{StaticResource Caption}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <!-- Информация о выбранной партии -->
                            <Border Style="{StaticResource InfoBox}" Margin="0,0,0,12">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Срок годности:" 
                                                   Style="{StaticResource BodyText}" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" 
                                                   x:Name="txtExpirationDate" 
                                                   Text="-"
                                                   Style="{StaticResource BodyText}"
                                                   Margin="8,0,0,0"/>
                                    </Grid>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Доступно:" 
                                                   Style="{StaticResource BodyText}" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" 
                                                   x:Name="txtAvailableQuantity" 
                                                   Text="0"
                                                   Style="{StaticResource BodyText}"
                                                   Margin="8,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Количество для списания -->
                            <TextBlock Text="Количество для списания:" 
                                       Style="{StaticResource BodyText}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4"/>
                            <TextBox x:Name="txtQuantity" 
                                    TextAlignment="Right"
                                    Height="36"
                                    Margin="0,0,0,12"
                                    PreviewTextInput="NumberValidationTextBox"/>

                            <!-- Причина списания для этой позиции -->

                            <!-- Комментарий -->

                            <!-- Кнопка добавления -->
                            <Button Content="➕ Добавить в акт" 
                                   Style="{StaticResource PrimaryButton}"
                                   Height="42"
                                   Click="AddItem_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>