<Page x:Class="PharmacyWarehouse.Pages.SuppliersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      Title="Поставщики">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- ЗАГОЛОВОК И КНОПКИ -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="🏢 Управление поставщиками" Style="{StaticResource H1}"/>
                    <TextBlock Text="Справочник контрагентов и партнеров"
                              Style="{StaticResource BodyText}" 
                              Margin="0,4,0,16"/>

                    <StackPanel Style="{StaticResource ToolbarPanel}" x:Name="Admin">
                        <Button Content="➕ Добавить поставщика" 
                                Style="{StaticResource PrimaryButton}" 
                                Width="180" 
                                Height="42"
                                Click="AddSupplier_Click"
                                ToolTip="Добавить нового поставщика в справочник"/>

                        <Button Content="✏️ Редактировать" 
                                Style="{StaticResource SecondaryButton}" 
                                Width="140" 
                                Height="42"
                                Margin="8,0,0,0" 
                                Click="EditSupplier_Click"
                                ToolTip="Редактировать выбранного поставщика"/>

                        <Button x:Name="btnDeactivate" 
                                Content="🚫 Деактивировать" 
                                Width="140" 
                                Height="42"
                                Margin="8,0,0,0" 
                                Click="DeactivateSupplier_Click"
                                ToolTip="Деактивировать поставщика (скрыть из списка заказов)">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource WarningButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                            <Setter Value="Collapsed" Property="Visibility"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Value="Visible" Property="Visibility"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="btnActivate" 
                                Content="✅ Активировать" 
                                Visibility="Collapsed"
                                Width="140" 
                                Margin="8,0,0,0" 
                                Click="ActivateSupplier_Click"
                                ToolTip="Активировать поставщика">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource SuccessButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Value="Collapsed" Property="Visibility"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                            <Setter Value="Visible" Property="Visibility"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="btnDelete" 
                                Content="🗑️ Удалить" 
                                Height="42"
                                Style="{StaticResource DangerButton}" 
                                Width="100" 
                                Margin="8,0,0,0" 
                                Click="DeleteSupplier_Click"
                                ToolTip="Удалить поставщика (доступно только если нет связанных партий и документов)"/>

                        <Separator Margin="24,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ФИЛЬТРЫ И ПОИСК -->
            <Border Style="{StaticResource FilterPanel}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🔍 Фильтры и поиск" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Поиск по названию/контакту/ИНН -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,8">
                                <TextBlock Text="Поиск (название, контакт, ИНН, телефон)" 
                                          Style="{StaticResource BodyText}" 
                                          Margin="0,0,0,4"/>
                                <TextBox x:Name="SearchTextBox"
                                         TextChanged="SearchTextBox_TextChanged"
                                         KeyDown="SearchTextBox_KeyDown">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                            </StackPanel>

                            <!-- Статус -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,12,8">
                                <TextBlock Text="Статус" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbStatus" 
                                          SelectionChanged="CmbStatus_SelectionChanged">
                                    <ComboBoxItem Content="Все" IsSelected="True"/>
                                    <ComboBoxItem Content="Активные"/>
                                    <ComboBoxItem Content="Неактивные"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Есть партии -->
                            <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,12,8">
                                <TextBlock Text="Наличие партий" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbHasBatches" SelectionChanged="CmbHasBatches_SelectionChanged">
                                    <ComboBoxItem Content="Все" IsSelected="True"/>
                                    <ComboBoxItem Content="С партиями"/>
                                    <ComboBoxItem Content="Без партий"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Документы -->
                            <StackPanel Grid.Column="3" Grid.Row="0" Margin="0,0,12,8">
                                <TextBlock Text="За месяц" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbRecentActivity" SelectionChanged="CmbRecentActivity_SelectionChanged">
                                    <ComboBoxItem Content="Все" IsSelected="True"/>
                                    <ComboBoxItem Content="Были поставки"/>
                                    <ComboBoxItem Content="Без поставок"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Кнопки фильтров -->
                            <StackPanel Grid.Column="4" Grid.Row="0" VerticalAlignment="Bottom">
                                <Button Content="Применить" 
                                        Style="{StaticResource PrimaryButton}" 
                                        Width="100" 
                                        Click="ApplyFilters_Click"
                                        ToolTip="Применить фильтры"/>
                                <Button Content="Сбросить" 
                                        Style="{StaticResource OutlineButton}" 
                                        Width="100" 
                                        Margin="0,8,0,0" 
                                        Click="ResetFilters_Click"
                                        ToolTip="Сбросить все фильтры"/>
                            </StackPanel>

                            <!-- Дополнительные фильтры -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Orientation="Horizontal">
                                <CheckBox x:Name="chkShowOnlyActive" 
                                          Content="Только активные" 
                                          IsChecked="True"
                                          Margin="0,0,16,0"
                                          Checked="ChkShowOnlyActive_Checked"
                                          Unchecked="ChkShowOnlyActive_Unchecked"/>

                                <CheckBox x:Name="chkHasLateDeliveries" 
                                          Content="С просроченными поставками" 
                                          Margin="0,0,16,0"
                                          Checked="ChkHasLateDeliveries_Checked"
                                          Unchecked="ChkHasLateDeliveries_Unchecked"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Статистика фильтров -->
                    <Border Grid.Column="1" 
                           Margin="24,0,0,0"
                           Padding="16"
                           Background="{StaticResource BackgroundLightBrush}"
                           BorderBrush="{StaticResource BorderLightBrush}"
                           BorderThickness="1"
                           CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="📊 Статистика" Style="{StaticResource H3}" Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtTotalCount" 
                                       Text="Всего: 0" 
                                       Style="{StaticResource BodyText}"
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtActiveCount" 
                                       Text="Активных: 0" 
                                       Style="{StaticResource BodyText}"
                                       Foreground="{StaticResource AccentGreenBrush}"/>
                            <TextBlock x:Name="txtInactiveCount" 
                                       Text="Неактивных: 0" 
                                       Style="{StaticResource BodyText}"
                                       Foreground="{StaticResource GrayBrush}"/>
                            <TextBlock x:Name="txtWithBatchesCount" 
                                       Text="С партиями: 0" 
                                       Style="{StaticResource BodyText}"/>
                            <TextBlock x:Name="txtWithoutBatchesCount" 
                                       Text="Без партий: 0" 
                                       Style="{StaticResource BodyText}"/>
                            <Separator Margin="0,8,0,8"/>
                            <TextBlock x:Name="txtMonthlyDeliveries" 
                                       Text="Поставок за месяц: 0" 
                                       Style="{StaticResource BodyText}"/>
                            <TextBlock x:Name="txtLateDeliveries" 
                                       Text="Просрочек: 0" 
                                       Style="{StaticResource BodyText}"
                                       Foreground="{StaticResource AccentOrangeBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ТАБЛИЦА ПОСТАВЩИКОВ -->
            <Border Style="{StaticResource Card}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок таблицы -->
                    <Border Grid.Row="0" Style="{StaticResource CardHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="📋 Список поставщиков" 
                                       Style="{StaticResource H3}" 
                                       Foreground="{StaticResource TextWhiteBrush}"/>
                        </Grid>
                    </Border>

                    <DataGrid x:Name="dgSuppliers" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"  
                              MouseDoubleClick="DgSuppliers_MouseDoubleClick"
                              SelectionChanged="DgSuppliers_SelectionChanged"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single">

                        <DataGrid.Columns>
                            <!-- Название -->
                            <DataGridTextColumn Header="Наименование поставщика" 
                                                Width="200"
                                                Binding="{Binding Name}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Name}"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Margin" Value="10 0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- ИНН -->
                            <DataGridTextColumn Header="ИНН" 
                                                Width="120"
                                                Binding="{Binding Inn, FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Контактное лицо -->
                            <DataGridTextColumn Header="Контактное лицо" 
                                                Width="150"
                                                Binding="{Binding ContactPerson, FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding ContactPerson}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Телефон -->
                            <DataGridTextColumn Header="Телефон" 
                                                Width="130"
                                                Binding="{Binding Phone, FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Адрес -->
                            <DataGridTextColumn Header="Адрес" 
                                                Width="180"
                                                Binding="{Binding Address, FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Address}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Количество партий -->
                            <DataGridTextColumn Header="Партий" 
                                                Width="70"
                                                Binding="{Binding BatchesCount, StringFormat='{}{0:N0}'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding BatchesCount}" Value="0">
                                                <Setter Property="Foreground" Value="{StaticResource GrayBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding BatchesCount}" Value="{x:Static sys:Int32.MaxValue}">
                                                <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Документов -->
                            <DataGridTextColumn Header="Документов" 
                                                Width="85"
                                                Binding="{Binding DocumentsCount, StringFormat='{}{0:N0}'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DocumentsCount}" Value="0">
                                                <Setter Property="Foreground" Value="{StaticResource GrayBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DocumentsCount}" Value="{x:Static sys:Int32.MaxValue}">
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Статус -->
                            <DataGridTemplateColumn Header="Статус" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="9"
                                                Padding="6,2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource StatusSuccessBrush}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Background" Value="{StaticResource StatusErrorBrush}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding StatusText}"
                                                       Foreground="White"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Height" Value="40"/>
                                <Style.Triggers>
                                    <!-- Выделение неактивных поставщиков -->
                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                        <Setter Property="Foreground" Value="{StaticResource GrayBrush}"/>
                                        <Setter Property="FontStyle" Value="Italic"/>
                                        <Setter Property="ToolTip">
                                            <Setter.Value>
                                                <TextBlock Text="⚠ Поставщик деактивирован" 
                                                          FontWeight="Bold"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <!-- Выделение поставщиков с просроченными поставками -->
                                    <DataTrigger Binding="{Binding HasLateDeliveries}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ProductExpiringBrush}"/>
                                        <Setter Property="ToolTip">
                                            <Setter.Value>
                                                <TextBlock Text="⏰ Внимание! Имеются просроченные поставки" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <!-- Выделение поставщиков без партий -->
                                    <DataTrigger Binding="{Binding BatchesCount}" Value="0">
                                        <Setter Property="ToolTip">
                                            <Setter.Value>
                                                <TextBlock Text="ℹ️ У поставщика нет партий товаров" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Редактировать" 
                                          Click="EditSupplier_Click"
                                          Icon="✏️"/>
                                <MenuItem Header="Просмотреть партии" 
                                          Click="ViewBatches_Click"
                                          Icon="📊"/>
                                <MenuItem Header="Просмотреть документы" 
                                          Click="ViewDocuments_Click"
                                          Icon="📄"/>
                                <Separator/>
                                <MenuItem Header="Создать поставку" 
                                          Click="CreateDelivery_Click"
                                          Icon="📥"/>
                                <MenuItem Header="Создать заказ" 
                                          Click="CreateOrder_Click"
                                          Icon="📋"/>
                                <Separator/>
                                <MenuItem Header="Позвонить" 
                                          Click="CallSupplier_Click"
                                          Icon="📞"/>
                                <MenuItem Header="Написать email" 
                                          Click="EmailSupplier_Click"
                                          Icon="✉️"/>
                                <Separator/>
                                <MenuItem Header="Копировать название" 
                                          Click="CopyName_Click"
                                          Icon="📋"/>
                                <MenuItem Header="Скопировать ИНН" 
                                          Click="CopyInn_Click"
                                          Icon="#"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                    <!-- ПАГИНАЦИЯ И ИНФОРМАЦИЯ -->
                    <Border Grid.Row="2" 
                           Background="{StaticResource BackgroundLightBrush}"
                           BorderBrush="{StaticResource BorderLightBrush}"
                           BorderThickness="0,1,0,0"
                           Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Выбор размера страницы -->
                            <StackPanel Grid.Column="1" 
                                       Orientation="Horizontal" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,16,0">
                                <TextBlock Text="Показывать по:" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,8,0"/>
                                <ComboBox x:Name="cmbPageSize" 
                                          Width="80"
                                          SelectionChanged="CmbPageSize_SelectionChanged">
                                    <ComboBoxItem Content="10" Tag="10" IsSelected="True"/>
                                    <ComboBoxItem Content="25" Tag="25"/>
                                    <ComboBoxItem Content="50" Tag="50"/>
                                    <ComboBoxItem Content="100" Tag="100"/>
                                    <ComboBoxItem Content="Все" Tag="0"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Пагинация -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="⏮️" 
                                        Style="{StaticResource IconButton}" 
                                        ToolTip="В начало"
                                        Click="FirstPage_Click"/>
                                <Button Content="◀️" 
                                        Style="{StaticResource IconButton}" 
                                        ToolTip="Предыдущая страница"
                                        Click="PrevPage_Click"
                                        Margin="4,0,0,0"/>

                                <TextBlock Text="Страница " 
                                          VerticalAlignment="Center" 
                                          Margin="8,0,4,0"/>
                                <TextBox x:Name="txtCurrentPage" 
                                         Text="1" 
                                         Width="40" 
                                         TextAlignment="Center" 
                                         VerticalAlignment="Center"
                                         TextChanged="TxtCurrentPage_TextChanged"/>
                                <TextBlock Text=" из " 
                                          VerticalAlignment="Center" 
                                          Margin="4,0,4,0"/>
                                <TextBlock x:Name="txtTotalPages" 
                                           Text="1" 
                                           VerticalAlignment="Center"
                                           FontWeight="SemiBold"/>

                                <Button Content="▶️" 
                                        Style="{StaticResource IconButton}" 
                                        ToolTip="Следующая страница"
                                        Click="NextPage_Click"
                                        Margin="8,0,4,0"/>
                                <Button Content="⏭️" 
                                        Style="{StaticResource IconButton}" 
                                        ToolTip="В конец"
                                        Click="LastPage_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- БЫСТРЫЙ ПРОСМОТР -->
            <Border Style="{StaticResource Card}" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Контактная информация -->
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="📞 Контактная информация" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock x:Name="txtSelectedSupplier" 
                                          Text="Не выбран поставщик" 
                                          FontWeight="SemiBold"
                                          Margin="0,0,0,12"
                                          FontSize="16"/>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Контакт:" 
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" 
                                              x:Name="txtSupplierContact" 
                                              Text="-"
                                              Style="{StaticResource BodyText}"
                                              Margin="8,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Телефон:" 
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" 
                                              x:Name="txtSupplierPhone" 
                                              Text="-"
                                              Style="{StaticResource BodyText}"
                                              Margin="8,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Адрес:" 
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" 
                                              x:Name="txtSupplierAddress" 
                                              Text="-"
                                              Style="{StaticResource BodyText}"
                                              Margin="8,0,0,0"
                                              TextWrapping="Wrap"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ИНН:" 
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" 
                                              x:Name="txtSupplierInn" 
                                              Text="-"
                                              Style="{StaticResource BodyText}"
                                              Margin="8,0,0,0"/>
                                </Grid>

                                <StackPanel x:Name="pnlBankDetails" 
                                           Margin="0,12,0,0" 
                                           Visibility="Collapsed">
                                    <TextBlock Text="🏦 Банковские реквизиты" 
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,8"/>
                                    <TextBlock x:Name="txtBankName" 
                                              Text="Банк: -"
                                              Style="{StaticResource BodyText}"/>
                                    <TextBlock x:Name="txtBankAccount" 
                                              Text="Счет: -"
                                              Style="{StaticResource BodyText}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Последние поставки -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="📦 Последние поставки" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                        <DataGrid x:Name="dgRecentDeliveries" 
                                 Height="200"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата" 
                                                   Width="100" 
                                                   Binding="{Binding Date, StringFormat='dd.MM.yyyy'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Номер" 
                                                   Width="120" 
                                                   Binding="{Binding DocumentNumber}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Сумма" 
                                                   Width="100" 
                                                   Binding="{Binding Amount, StringFormat='N2'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="0,0,8,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Статус" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="8"
                                                    Padding="4,2"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Оплачено">
                                                                <Setter Property="Background" Value="{StaticResource StatusSuccessBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Ожидает">
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Просрочено">
                                                                <Setter Property="Background" Value="{StaticResource StatusErrorBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Status}"
                                                           Foreground="White"
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Быстрые действия -->
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="📥 Новая поставка" 
                                    Style="{StaticResource OutlineButton}"
                                    Click="QuickCreateDelivery_Click"/>
                            <Button Content="📋 Новый заказ" 
                                    Style="{StaticResource OutlineButton}"
                                    Margin="8,0,0,0"
                                    Click="QuickCreateOrder_Click"/>
                            <Button Content="📞 Позвонить" 
                                    Style="{StaticResource OutlineButton}"
                                    Margin="8,0,0,0"
                                    Click="QuickCallSupplier_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>