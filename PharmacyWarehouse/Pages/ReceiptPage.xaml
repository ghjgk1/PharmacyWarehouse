<Page x:Class="PharmacyWarehouse.Pages.ReceiptPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      mc:Ignorable="d" 
      Title="Приход товара">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- ЗАГОЛОВОК И ИНФОРМАЦИЯ О ДОКУМЕНТЕ -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="📥 Приходная накладная" Style="{StaticResource H1}"/>
                    <TextBlock Text="Оформление поступления товара от поставщика"
                              Style="{StaticResource BodyText}" 
                              Margin="0,4,0,16"/>

                    <!-- Панель инструментов -->
                    <StackPanel Style="{StaticResource ToolbarPanel}">
                        <Button Content="📄 Сохранить черновик" 
                                 Style="{StaticResource OutlineButton}" 
                                 Width="160"
                                 Height="42"
                                 Click="SaveDraft_Click"/>

                        <Button Content="✅ Провести документ" 
                                 Style="{StaticResource SuccessButton}" 
                                 Width="160"
                                 Height="42"
                                 Margin="8,0,0,0"
                                 Click="ProcessDocument_Click"/>

                        <Button Content="🗑️ Отмена" 
                                 Style="{StaticResource DangerButton}" 
                                 Width="100"
                                 Height="42"
                                 Margin="8,0,0,0"
                                 Click="CancelDocument_Click"/>
                        <Separator Margin="24,0"/>

                        <Button Content="📋 Копировать номер" 
                                Style="{StaticResource IconButton}"
                                Click="CopyNumber_Click"/>

                        <Button Content="📊 Статистика" 
                                Style="{StaticResource IconButton}"
                                Click="ShowStatistics_Click"/>
                    </StackPanel>

                    <!-- Основная информация о документе -->
                    <Border Style="{StaticResource FilterPanel}" Margin="0,16,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Левая колонка: номер и дата -->
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Номер документа -->
                                    <TextBlock Text="Номер документа:" 
                                              Grid.Row="0" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"/>
                                    <TextBox x:Name="txtDocNumber" 
                                            Grid.Row="0" Grid.Column="1"
                                            Text="Новый"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryBrush}"
                                            IsReadOnly="True"
                                            BorderThickness="0"
                                            Background="Transparent"/>

                                    <!-- Дата документа -->
                                    <TextBlock Text="Дата документа:" 
                                              Grid.Row="1" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"
                                              Margin="0,12,0,0"/>
                                    <DatePicker x:Name="dpDocDate" 
                                               Grid.Row="1" Grid.Column="1"
                                               Margin="0,12,0,0"/>

                                    <!-- Дата счета -->
                                    <TextBlock Text="Дата счета поставщика:" 
                                              Grid.Row="2" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"
                                              Margin="0,12,0,0"/>
                                    <DatePicker x:Name="dpInvoiceDate" 
                                               Grid.Row="2" Grid.Column="1"
                                               Margin="0,12,0,0"/>
                                </Grid>
                            </StackPanel>

                            <!-- Средняя колонка: поставщик и склад -->
                            <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Поставщик -->
                                    <TextBlock Text="Поставщик:*" 
                                              Grid.Row="0" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"/>
                                    <ComboBox x:Name="cmbSupplier" 
                                             Grid.Row="0" Grid.Column="1"
                                             DisplayMemberPath="Name"
                                             SelectedValuePath="Id"
                                             SelectionChanged="CmbSupplier_SelectionChanged"/>

                                    <!-- Номер счета поставщика -->
                                    <TextBlock Text="Номер счета поставщика:" 
                                              Grid.Row="1" Grid.Column="0" 
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"
                                              Margin="0,12,2,0"/>
                                    <TextBox x:Name="txtInvoiceNumber" 
                                             Grid.Row="1" Grid.Column="1"
                                             Margin="0,12,0,0"
                                             MaxLength="24" 
                                             ToolTip="Введите 20-значный номер банковского счета"/>

                                        <!-- Примечание -->
                                    <TextBlock Text="Примечание:" 
                                              Grid.Row="2" Grid.Column="0"
                                              Style="{StaticResource BodyText}" 
                                              FontWeight="SemiBold"
                                              Margin="0,12,0,0"/>
                                    <TextBox x:Name="txtNotes" 
                                            Grid.Row="2" Grid.Column="1"
                                            Margin="0,12,0,0"/>
                                </Grid>
                            </StackPanel>

                            <!-- Правая колонка: статус и сумма -->
                            <Border Grid.Column="2" 
                                   Style="{StaticResource InfoBox}"
                                   Width="200">
                                <StackPanel>
                                    <TextBlock Text="Позиций:" 
                                              Style="{StaticResource BodyText}"/>
                                    <TextBlock x:Name="txtItemsCount" 
                                              Text="0"
                                              Style="{StaticResource BodyText}"
                                              FontWeight="SemiBold"/>

                                    <TextBlock Text="Общее количество:" 
                                              Style="{StaticResource BodyText}"
                                              Margin="0,8,0,0"/>
                                    <TextBlock x:Name="txtTotalQuantity" 
                                              Text="0"
                                              Style="{StaticResource BodyText}"
                                              FontWeight="SemiBold"/>

                                    <TextBlock Text="Общая сумма:" 
                                              Style="{StaticResource BodyText}"
                                              Margin="0,8,0,0"/>
                                    <TextBlock x:Name="txtTotalAmount" 
                                              Text="0.00"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource AccentGreenBrush}"/>
                                    <TextBlock Text="руб." 
                                              Style="{StaticResource Caption}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- ДОБАВЛЕНИЕ ТОВАРА -->
            <Border Style="{StaticResource Card}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок таблицы -->
                    <Border Grid.Row="0" Style="{StaticResource CardHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="📦 Позиции прихода" 
                                       Style="{StaticResource H3}" 
                                       Foreground="{StaticResource TextWhiteBrush}"/>
                            <TextBlock Grid.Column="1" 
                                       x:Name="txtSelectedItemsInfo"
                                       Text="Выбрано: 0" 
                                       Style="{StaticResource BodyText}" 
                                       Foreground="{StaticResource TextWhiteBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Панель добавления товара -->
                    <Border Grid.Row="1" 
                           Background="{StaticResource BackgroundLightBrush}"
                           Padding="16"
                           BorderBrush="{StaticResource BorderLightBrush}"
                           BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Заголовки -->
                            <TextBlock Text="Товар *" 
                                      Grid.Column="0" Grid.Row="0"
                                      Style="{StaticResource BodyText}" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="Количество *" 
                                      Grid.Column="1" Grid.Row="0"
                                      Style="{StaticResource BodyText}" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="Цена закупки *" 
                                      Grid.Column="2" Grid.Row="0"
                                      Style="{StaticResource BodyText}" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="Сумма" 
                                      Grid.Column="3" Grid.Row="0"
                                      Style="{StaticResource BodyText}" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="Серия товара*" 
                                      Grid.Column="4" Grid.Row="0"
                                      Style="{StaticResource BodyText}" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="Срок годности*" 
                                      Grid.Column="5" Grid.Row="0"
                                      Style="{StaticResource BodyText}" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>

                            <!-- Поля ввода -->
                            <ComboBox x:Name="cmbProduct" 
                                     Grid.Column="0" Grid.Row="1"
                                     DisplayMemberPath="Name"
                                     IsEditable="True"
                                     IsTextSearchEnabled="True"
                                     StaysOpenOnEdit="True"
                                     TextSearch.TextPath="Name"
                                     ItemsSource="{Binding FilteredProducts}"
                                     Text="{Binding ProductSearchText, UpdateSourceTrigger=PropertyChanged}"
                                     SelectionChanged="CmbProduct_SelectionChanged"
                                     Height="36"
                                     Margin="0,0,8,0">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                        <Setter Property="ItemTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>

                            <TextBox x:Name="txtQuantity" 
                                    Grid.Column="1" Grid.Row="1"
                                    TextAlignment="Right"
                                    Margin="0,0,8,0"
                                    Height="36"
                                    PreviewTextInput="NumberValidationTextBox"/>

                            <TextBox x:Name="txtPurchasePrice" 
                                    Grid.Column="2" Grid.Row="1"
                                    TextAlignment="Right"
                                    Margin="0,0,8,0"
                                    Height="36"
                                    PreviewTextInput="DecimalValidationTextBox"/>

                            <TextBlock x:Name="txtLineTotal" 
                                      Grid.Column="3" Grid.Row="1"
                                      Text="0.00"
                                      Style="{StaticResource BodyText}"
                                      VerticalAlignment="Center"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource AccentGreenBrush}"
                                      Margin="0,0,8,0"/>

                            <TextBox x:Name="txtSeries"
                                      Grid.Column="4" Grid.Row="1"
                                      TextAlignment="Right"
                                      Margin="0,0,8,0"
                                      Height="36"
                                      PreviewTextInput="NumberValidationTextBox"/>
                            <DatePicker x:Name="dpExpirationDate" 
                                      Grid.Column="5" Grid.Row="1"
                                      SelectedDateFormat="Short"
                                      Height="30"/>

                            <Button Content="➕ Добавить" 
                                   Grid.Column="5" Grid.Row="2"
                                   Style="{StaticResource PrimaryButton}"
                                   Width="120"
                                   Height="36"
                                   Click="AddItem_Click"
                                   HorizontalAlignment="Right" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Таблица позиций -->
                <DataGrid x:Name="dgItems" 
       Grid.Row="2"
       AutoGenerateColumns="False"
       CanUserAddRows="False"
       IsReadOnly="True"
       SelectionMode="Single"
       SelectionChanged="DgItems_SelectionChanged"
       Margin="0 0 15 0 ">

                    <DataGrid.Columns>
                        <!-- № -->
                        <DataGridTextColumn Header="№" Width="40">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Товар -->
                        <DataGridTextColumn Header="Товар" 
                      Width="250"
                      Binding="{Binding Product.Name}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding Product.Name}"/>
                                    <Setter Property="Margin" Value="10 0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Серия" 
                      Width="120"
                      Binding="{Binding Series}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Количество -->
                        <DataGridTextColumn Header="Кол-во" 
                      Width="90"
                      Binding="{Binding Quantity, StringFormat='{}{0:N0}'}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,8,0"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Цена -->
                        <DataGridTextColumn Header="Цена" 
                      Width="100"
                      Binding="{Binding UnitPrice, StringFormat='N2'}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,8,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Сумма -->
                        <DataGridTextColumn Header="Сумма" 
                      Width="120"
                      Binding="{Binding TotalPrice, StringFormat='N2'}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,8,0"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Партия -->
                        <DataGridTextColumn Header="Партия" 
                      Width="150"
                      Binding="{Binding Series}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Срок годности -->
                        <DataGridTextColumn Header="Срок годности" 
                      Width="120"
                      Binding="{Binding ExpirationDate, StringFormat='dd.MM.yyyy'}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsExpiringSoon}" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="✏️ Редактировать" 
Click="EditItem_Click"/>
                            <MenuItem Header="📋 Копировать" 
Click="CopyItem_Click"/>
                            <Separator/>
                            <MenuItem Header="📊 Информация о товаре" 
Click="ShowProductInfo_Click"/>
                            <MenuItem Header="📦 История поставок" 
Click="ShowDeliveryHistory_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
                <!-- ИНФОРМАЦИЯ О ВЫБРАННОМ ТОВАРЕ -->
                <Border Style="{StaticResource Card}" Padding="12" Grid.Column="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Информация о товаре -->
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="ℹ️ Информация о товаре" 
                                Style="{StaticResource H3}" 
                                Margin="0,0,0,12"/>

                            <Border Style="{StaticResource InfoBox}">
                                <StackPanel>
                                    <TextBlock x:Name="txtSelectedProduct" 
                                        Text="Не выбран товар" 
                                        FontWeight="SemiBold"
                                        Margin="0,0,0,8"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Категория:" 
                                            Style="{StaticResource BodyText}" 
                                            FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" 
                                            x:Name="txtProductCategory" 
                                            Text="-"
                                            Style="{StaticResource BodyText}"
                                            Margin="8,0,0,0"/>
                                    </Grid>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Производитель:" 
                                            Style="{StaticResource BodyText}" 
                                            FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" 
                                            x:Name="txtProductManufacturer" 
                                            Text="-"
                                            Style="{StaticResource BodyText}"
                                            Margin="8,0,0,0"/>
                                    </Grid>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Текущий остаток:" 
                                            Style="{StaticResource BodyText}" 
                                            FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" 
                                            x:Name="txtCurrentStock" 
                                            Text="0"
                                            Style="{StaticResource BodyText}"
                                            Margin="8,0,0,0"/>
                                    </Grid>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Минимальный остаток:" 
                                            Style="{StaticResource BodyText}" 
                                            FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" 
                                            x:Name="txtMinRemainder" 
                                            Text="0"
                                            Style="{StaticResource BodyText}"
                                            Margin="8,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>